<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- 连接员工数据库 不激活注解事务，直接配置通过xml配置事务管理-->
    <bean id="supplierDataSource" class="org.apache.commons.dbcp.BasicDataSource"
          destroy-method="close">
        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url.supplier}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
        <property name="testOnBorrow" value="true"/>
        <property name="testOnReturn" value="true"/>
        <property name="testWhileIdle" value="true"/>
        <property name="validationQuery" value="SELECT count(1) FROM DUAL"/>
    </bean>

    <bean id="supplierTransactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="supplierDataSource"/>
    </bean>

    <!-- 事务配置基类 -->
    <bean id="transactionBase"
          class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
          lazy-init="true" abstract="true">
        <!-- 配置事务管理器 -->
        <property name="transactionManager" ref="supplierTransactionManager"/>
        <!-- 配置事务属性 -->
        <property name="transactionAttributes">
            <props>
                <prop key="query*">PROPAGATION_REQUIRED,readOnly</prop>
                <prop key="create*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <bean id="supplier-sqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
        <property name="configLocations">
            <list>
                <value>classpath:supp-sql-map-config.xml</value>
                <value>classpath:security-sql-map-config.xml</value>
            </list>
        </property>
        <property name="dataSource" ref="supplierDataSource"/>
    </bean>


    <bean id="logisticsPrintInfoRepository" class="com.kariqu.suppliercenter.repository.impl.LogisticsPrintInfoRepositoryImpl">
        <property name="sqlMapClient" ref="supplier-sqlMapClient"/>
    </bean>

    <bean id="supplierRoleRepository" class="com.kariqu.suppliercenter.repository.impl.SupplierRoleRepositoryImpl">
        <property name="sqlMapClient" ref="supplier-sqlMapClient"/>
    </bean>

    <bean id="supplierLogRepository" class="com.kariqu.suppliercenter.repository.impl.SupplierLogRepositoryImpl">
        <property name="sqlMapClient" ref="supplier-sqlMapClient"/>
    </bean>
    <bean id="roleRepository"
          class="com.kariqu.securitysystem.repository.impl.ibatis.RoleRepositoryImpl">
        <property name="sqlMapClient" ref="supplier-sqlMapClient"/>
    </bean>

    <bean id="roleScopeRepository"
          class="com.kariqu.securitysystem.repository.impl.ibatis.RoleScopeRepositoryImpl">
        <property name="sqlMapClient" ref="supplier-sqlMapClient"/>
    </bean>

    <bean id="urlPermissionRepository"
          class="com.kariqu.securitysystem.repository.impl.ibatis.UrlPermissionRepositoryImpl">
        <property name="sqlMapClient" ref="supplier-sqlMapClient"/>
    </bean>

</beans>
